{
  "name": "@wicadu/arepa",
  "version": "1.17.0",
  "description": "Free and open-source CSS framework that it called Arepa because who does not love one?",
  "author": "wicadu Developers <help@dev.wicadu.com>",
  "exports": {
    "./ui": "./dist/ui",
    "./hooks": "./dist/hooks",
    "./utils": "./dist/utils"
  },
  "files": [
    "dist"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/wicadu/arepa-ui.git"
  },
  "scripts": {
    "dev": "npm run build:babel -- --watch",
    "storybook": "start-storybook",
    "test": "jest --colors --logHeapUsage --updateSnapshot",
    "coverage": "jest --coverage --colors",
    "build:babel": "babel ./src --out-dir dist --extensions .ts,.tsx",
    "build": "rm -rf dist && npm run build:babel",
    "build:storybook": "build-storybook -o ./build",
    "deploy": "npm run build && npm publish --access=public"
  },
  "license": "MIT",
  "homepage": "https://github.com/wicadu/arepa-ui/blob/master/README.md",
  "peerDependencies": {
    "@reach/router": "^1.3.4",
    "prop-types": "^15.7.2",
    "react": "^16.14.0",
    "react-dom": "^16.14.0"
  },
  "dependencies": {
    "@emotion/core": "^11.0.0",
    "@emotion/react": "^11.11.1",
    "@emotion/styled": "^11.11.0",
    "react-hook-form": "^6.14.0",
    "react-loading-skeleton": "^3.1.0"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version",
      "ie 11"
    ]
  },
  "devDependencies": {
    "@babel/cli": "^7.12.0",
    "@babel/preset-env": "^7.12.0",
    "@babel/preset-react": "^7.12.10",
    "@babel/preset-typescript": "^7.12.7",
    "@babel/types": "^7.12.0",
    "@sambego/storybook-state": "^2.0.1",
    "@storybook/addon-actions": "^6.4.0-beta.9",
    "@storybook/addon-docs": "^6.4.0-beta.9",
    "@storybook/addon-essentials": "^6.4.0-beta.9",
    "@storybook/addon-links": "^6.4.0-beta.9",
    "@storybook/addons": "^6.4.0-beta.9",
    "@storybook/react": "^6.4.0-beta.9",
    "@types/react": "^16.9.52",
    "babel-loader": "^8.1.0",
    "typescript": "^4.0.3"
  },
  "bugs": {
    "url": "https://github.com/wicadu/wicadu-ui/issues"
  },
  "keywords": [
    "react",
